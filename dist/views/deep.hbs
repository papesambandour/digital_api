<!DOCTYPE html>
<html lang="fr">

<head>
<!--
    <meta http-equiv="refresh" content="5" >
-->

    <meta property="og:site_name" content="{{ mName }}">
    <meta property="og:title" content="{{ mName }}">
    <meta property="og:description" content="{{ title }}">
    <meta property="og:image" content="{{ logo }}">
    <meta property="og:url" content="{{ currentUrl }}">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="fr_FR">
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#1DC8FF" />
    <style>
        body {
            text-align: center;
            background-color: #1DC8FF;
            color: white;
            font-size: min(max(1rem, 5vw), 30px);
            font-family: "SF Pro Display", system-ui;
        }


        .instructions {
            margin: 0 min(2em, 5%);
        }

        .instruction-heading {
            font-size: 120%;
            font-weight: bold;
            margin-bottom: 1em;
            text-align: left;
        }

        .copyright-container{
            position: fixed;
            top: calc(50% + 96px);
            left: calc(50% - 55px);
            font-size: 20px;
        }

        .description-text {
            position: fixed;
            top: calc(50% - 59px);
            left: 0;
            font-size: 20px;
            width: 100%;
            text-align: center;
        }

        .description-logo {
            position: fixed;
            top: 50px;
            left: calc(50% - 100px);
            font-size: 20px;
        }

        .description-logo img{
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50px;

        }

        .btn-container {
            margin-top: 10px;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: min(40px, 10vh);
            width: fit-content;
            background: white;
            border: 1px solid white;
            border-radius: 30px;
            -moz-border-radius: 30px;
            -webkit-border-radius: 30px;
            padding: 10px 30px;
            -webkit-font-smoothing: antialiased;
            font-family: "SF Pro Display", system-ui;
            font-size: 22px;
            font-weight: bold;
            position: fixed;
            top: 50%;
            left: calc(50% - 127px);
        }

        .btn-container > a {
            color: #1DC8FF;
            text-decoration: none;
        }

        .cbutton{
            color: white;
            letter-spacing: 2px;
            font-weight: bold;
        }

    </style>
</head>

<body>

<div class="instructions">
    <div class="instruction-heading">
    <span>

    </span>
    </div>

    <div class="description-logo">
        <img src="{{ logo }}">
    </div>
    <div class="description-text">
        <span>{{ body }}</span>
    </div>
    <div class="btn-container">
        <a href="{{ link}}" onclick="clicked(this)">
            Cliquez pour payer
        </a>

    </div>

    <div class="copyright-container">
        <!--<a href="https://paytech.sn/" class="cbutton" target="_blank" >{{ mName }} </a> --><span  style="color: white"> by </span> <a  class="cbutton" href="https://intech.sn/" target="_blank">INTech</a>
    </div>
    <script>
        window.cleanTimeOut = null;
        function clicked(a) {
            //cleanTimeOut(window.cleanTimeOut);
            a.disabled=true;
            a.text='En ouverture â€¦';
            setTimeout(function () {
                a.setAttribute('href', '#');
            }, 500)
        }
    </script>
    <script>
        window.cleanTimeOut =  setTimeout(function () {
            location.reload(false)
        }, 5000);

       // document.getElementsByTagName('a')[0].click()
    </script>

</div>

</body>
</html>